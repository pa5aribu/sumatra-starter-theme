{
  "name": "sumatra-starter-theme",
  "version": "2",
  "description": "Sumatra Starter Theme",
  "main": "index.js",
  "scripts": {
    "watch-tailwind": "postcss ./src/style.css -o ./style.css --watch --verbose",
    "watch-all": "browser-sync start --proxy 'sst.local' --files '**/*.php,*.css,**/*.js'",
    "dev": "concurrently 'npm:watch-tailwind' 'npm:watch-all'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balapa/sumatra-starter-theme.git"
  },
  "author": "Bhakti Pasaribu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/balapa/sumatra-starter-theme/issues"
  },
  "homepage": "https://github.com/balapa/sumatra-starter-theme#readme",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "tailwindcss": "^3.0.24"
  }
}
